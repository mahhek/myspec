		<td><%= link_to article.name, "/paragraphs?art_id=#{article.number}&part_id=1" %></td>
        <td><%= link_to (image_tag "/images/g-icon-editor.png", :size => "15x15"), edit_article_path(article)  %></td>
		<td><%= link_to image_tag('/images/minus.png'), article, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
	<tr>
		<td><a href="javascript:toggle_tr('2');"><img src="/images/plus.jpg" height="10px" width="10px" id="img_2"/></a></td>
  		<td><%= Part.find(2).name %></td>
  		<td></td>
  		<td></td>
  	</tr>
  <% for article in @articles_2 %>
