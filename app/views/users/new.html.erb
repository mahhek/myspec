<% title 'Sign up'%>
<div id="top-logo">
	
</div>
<% form_for @user do |f| -%>
	<table>
		
		<tr>
			<td class="form">
							&nbsp;
			</td>
			<td class="form" colspan="2" id="msg">
						<%- flash.each do |name, msg| -%>
								<%= content_tag :div, msg, :class => "flash#{name}"%>
						<%- end -%>
			</td>
			
		</tr>
		<tr>
			<td class="form">
				
							<%= f.label :username %>
			</td>
			<td class="form">
							&nbsp;
			</td>
			<td class="form">
							<%= f.text_field :username %>
							<%= error_message_on :user, :username %>
			</td>
		</tr>
		<tr>
			<td class="form">
				
							<%= f.label :email %>
			</td>
			<td class="form">
							&nbsp;
			</td>
			<td class="form">
							<%= f.text_field :email %>
							<%= error_message_on :user, :email %>
			</td>
		</tr>
		<tr>
			<td class="form">
							<%= f.label :password %>
			</td>
			<td class="form">
							&nbsp;
			</td>
			<td class="form">
							<%= f.password_field :password %>
							<%= error_message_on :user, :password %>
			</td>
		</tr>
		<tr>
			<td class="form">
							<%= f.label :password_confirmation, "Repeat" %>
			</td>
			<td class="form">
							&nbsp;
			</td>
			<td class="form">
							<%= f.password_field :password_confirmation %>
			</td>
		</tr>
		<tr>
			<td class="form">
				&nbsp;
			</td>
			<td class="form">
				&nbsp;
			</td>
			<td class="form">
				<%=check_box_tag "term_and_conditions"%> <label for="term_and_conditions" > Agree with <%=link_to "Terms and Conditions", "http://www.myspecwriter.com/terms", :target => "_blank" %></label>
			</td>
		</tr>
		<tr>
			<td class="form">
				&nbsp;
			</td>
			<td class="form">
							&nbsp;
			</td>
		</tr>
		<tr>
			<td class="form">
				&nbsp;
			</td>
			<td class="form">
				&nbsp;
			</td>
			<td class="form">
				<%= f.submit "Sign up", :class => "button" %>
			</td>
		</tr>
		<tr>
			<td class="form" colspan="3">
				&nbsp;
			</td>
		</tr>
		<tr>
			<td class="form" colspan="1">
				&nbsp;
			</td>
			<td class="form" colspan="2">
				Forgot your <%= link_to "Password?", new_password_reset_path %> or want to <%= link_to "Login?", login_path %>
			</td>
		</tr>
		
	</table>
<% end -%>
