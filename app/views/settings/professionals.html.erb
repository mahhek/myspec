			<td><%=link_to "#{a_professional.name}", "/settings/professional_detail/#{a_professional.id}"%></td>
			<td><%=a_professional.created_at.strftime("%m-%d-%Y")%></td>
			<td>
				    <%= a_professional.premium_provider %>
				              </td>
			<td><%=a_professional.email%></td>
			<!-- <td><%#= evaluator.active? ? "Confirmed" : "Pending"%></td> -->
			<td><%= link_to image_tag("/images/minus.png"), a_professional, :confirm => 'Are you sure want to remove this?', :method => :delete %></td>
        </tr>
      <% end %>
      <%end%>
    </table>
    <br/>
