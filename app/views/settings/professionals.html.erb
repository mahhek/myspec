<% title "Admin Settings"%>
<div class="left_page">
  <div class="lt_nav_container">
  	<%= render :partial => 'help_tickets/apps_info' %>
  </div>
	<div class="lt_button_container">
		<%= render :partial => 'help_tickets/support_info' %>
	  </div>
</div>
<div class="right_page">
	
    <h3>Professionals Requested</h3>
	<table id="">
      <tr>
		<th class="sec-name-small">Name</th>
		<th class="eval-date">Request Date</th>
		<th class="team-position">Status</th>
		<th class="team-email">Email</th>
		<th class="sub-rem"></th>
      </tr>
      <%unless @pending_professionals.blank?%>
      <% for professional in @pending_professionals %>
        <tr class="<%= cycle("othertdalter", "") %>">
			<td><%=link_to "#{professional.name}", "/settings/professional_detail/#{professional.id}"%></td>
			<td><%=professional.created_at.strftime("%m-%d-%Y")%></td>
			<td>
				    <%= professional.status %>
				              </td>
			<td><%=professional.email%></td>
			<!-- <td><%#= evaluator.active? ? "Confirmed" : "Pending"%></td> -->
			<td><%= link_to image_tag("/images/minus.png"), professional, :confirm => 'Are you sure want to remove this?', :method => :delete %></td>
        </tr>
      <% end %>
      <%end%>
    </table>
	<br/>
    <h3>Registered Professionals</h3>
	<table id="">
      <tr>
		<th class="sec-name-small">Name</th>
		<th class="eval-date">Request Date</th>
		<th class="team-position">Permium</th>
		<th class="team-email">Email</th>
		<th class="sub-rem"></th>
      </tr>
      <%unless @active_professionals.blank?%>
      <% for a_professional in @active_professionals %>
